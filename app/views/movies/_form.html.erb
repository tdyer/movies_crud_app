<!-- Helper to generate a HTML Form -->
<%= form_for(@movie) do |f| %>

<% if @movie.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from b\
    eing saved:</h2>

  <ul>
    <% @movie.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<fieldset>
  <ul>
    <li>
      <!-- Helpers to generate a text field for name -->
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true %>
    </li>
    <li>
      <!-- Helpers to generate a select/drop down for rating -->
      <%= f.label :rating %>
      <%= f.select :rating, Movie::RATINGS.to_a.map { |r| [r, r] }, include_blank: true %>
    </li>
    <li>
      <!-- Helper to generate a text area for description -->
      <%= f.label :description %>
      <%= f.text_area :desc %>
    </li>
    <li>
      <%= f.label :length %>
      <%= f.number_field :length, min: 3, max: 300, value: 120 %>
    </li>
    <li>
      <%= f.label :released_year %>
      <%= f.select :released_year, (1910..Date.today.year).to_a.map { |y| [y, y] }, selected: '1980'  %>
    </li>
  </ul>
  <p>
    <%= f.submit %><br/>
  </p>
</fieldset>
<% end %>
